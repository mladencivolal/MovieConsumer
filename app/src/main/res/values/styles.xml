<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MovieConsumerTheme" parent="AppTheme">
        <item name="android:textViewStyle">@style/MovieConsumerTextViewStyle</item>
        <item name="android:ratingBarStyle">@style/MovieConsumerRatingBarStyle</item>
        <item name="android:buttonStyle">@style/MovieConsumerButtonStyle</item>
    </style>

    <style name="MovieConsumerTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:paddingTop">@dimen/textview_padding_top</item>
        <item name="android:paddingBottom">@dimen/textview_padding_bottom</item>
    </style>

    <style name="MovieConsumerButtonStyle" parent="android:Widget.Material.Button">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:paddingTop">@dimen/textview_padding_top</item>
        <item name="android:paddingBottom">@dimen/textview_padding_bottom</item>
    </style>

    <style name="MovieConsumerRatingBarStyle" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:paddingTop">@dimen/global_padding</item>
        <item name="android:paddingBottom">@dimen/textview_padding_bottom</item>
        <item name="android:numStars">10</item>
        <item name="android:progressBackgroundTint">@color/darker_text</item>
        <item name="android:progressTint">@color/colorAccent</item>
    </style>
</resources>